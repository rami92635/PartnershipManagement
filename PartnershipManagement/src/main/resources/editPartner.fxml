<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EditPartnerController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">

        </ImageView>
        <AnchorPane id="AnchorPane" layoutX="25.0" layoutY="25.0" prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: WHITE;">
            <children>
                <VBox layoutX="496.0" layoutY="37.0" prefHeight="200.0" prefWidth="163.0" style="-fx-spacing: 13;">
                    <children>
                        <Label fx:id="name" prefHeight="23.0" prefWidth="187.0" text="Partner Name:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="email" prefHeight="17.0" prefWidth="187.0" text="Email:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="reward_type" prefHeight="17.0" prefWidth="206.0" text="Reward Type:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox layoutX="244.0" layoutY="37.0" prefHeight="265.0" prefWidth="206.0" style="-fx-spacing: 10;">
                    <children>
                        <Label lineSpacing="20.0" text="Name :" textFill="#789461">
                            <font>
                                <Font name="Verdana Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label lineSpacing="20.0" text="Email :" textFill="#789461">
                            <font>
                                <Font name="Verdana Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label lineSpacing="20.0" text="Reward Type :" textFill="#789461">
                            <font>
                                <Font name="Verdana Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Button fx:id="delb" layoutX="25.0" layoutY="494.0" mnemonicParsing="false" onAction="#delete" prefHeight="25.0" prefWidth="300.0" style="-fx-background-color: #6d864c; -fx-background-radius: 10;" text="Delete" textFill="WHITE">
                    <font>
                        <Font name="Verdana Bold" size="24.0" />
                    </font></Button>
                <Button fx:id="modb" layoutX="426.0" layoutY="494.0" mnemonicParsing="false" onAction="#modifier" prefHeight="25.0" prefWidth="300.0" style="-fx-background-color: #6f8e57; -fx-background-radius: 10;" text="Update" textFill="WHITE">
                    <font>
                        <Font name="Verdana Bold" size="24.0" />
                    </font></Button>
                <Line endX="598.0" layoutX="126.0" layoutY="259.0" startX="-100.0" stroke="#789461" strokeWidth="3.0" />
                <Button fx:id="ret" layoutX="32.0" layoutY="22.0" mnemonicParsing="false" onAction="#retour" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: white;" text="Back" textFill="#512300">
                    <font>
                        <Font name="Verdana Bold" size="15.0" />
                    </font>
                </Button>
                <ScrollPane layoutX="25.0" layoutY="275.0">
                    <content>
                        <AnchorPane fx:id="ticketListPane" prefHeight="200.0" prefWidth="701.0" />
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
